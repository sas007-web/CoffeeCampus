@page
@model CoffeeCampus.Pages.Users.CreateModel

<h1>Create User</h1>

<form method="post">
    <div>
        <label>Full Name</label>
        <input asp-for="NewUser.FullName" />
        <span asp-validation-for="NewUser.FullName"></span>
    </div>
    <div>
        <label>Email</label>
        <input asp-for="NewUser.Email" />
        <span asp-validation-for="NewUser.Email"></span>
    </div>
    <div>
        <label>Department</label>
        <input asp-for="NewUser.Department" />
        <span asp-validation-for="NewUser.Department"></span>
    </div>
    <button type="submit">Create</button>
</form>
